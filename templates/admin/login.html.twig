{% extends 'base.html.twig' %}

{% block title %}Admin Login{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center p-4" style="background: linear-gradient(135deg,#1e1e2e 0%,#2d2d44 100%);">

        <div class="relative w-full max-w-md">

            {# Logo & Titre #}
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-20 h-20 rounded-3xl bg-purple-500/20 backdrop-blur-xl border border-purple-500/30 mb-4 shadow-2xl">
                    <i class="fa fa-user-shield text-4xl text-purple-500"></i>
                </div>
                <h1 class="text-3xl font-bold text-white mb-2">Espace Admin</h1>
                <p class="text-gray-400">Connexion s√©curis√©e pour les administrateurs</p>
            </div>

            {# Card formulaire #}
            <div class="bg-gray-900/60 backdrop-blur-xl border border-gray-800 rounded-3xl p-8 shadow-2xl">

                {# Erreur #}
                {% if error %}
                    <div class="mb-6 p-4 rounded-2xl bg-red-500/10 border-2 border-red-500/30 flex items-start gap-3">
                        <i class="fa fa-exclamation-triangle text-red-500 text-2xl"></i>
                        <div>
                            <p class="font-semibold text-red-400 text-sm">Acc√®s refus√©</p>
                            <p class="text-red-300 text-sm mt-1">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                    </div>
                {% endif %}

                <form method="post" action="{{ path('admin_login') }}" class="space-y-5" novalidate>

                    {# Email #}
                    <div class="relative">
                        <label for="email" class="block text-sm font-semibold text-gray-300 mb-1">Email administrateur</label>
                        <div class="relative">
                            <i class="fa fa-envelope absolute left-3 top-3 text-gray-400"></i>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                value="{{ last_username }}"
                                required
                                autofocus
                                autocomplete="email"
                                placeholder="admin@example.com"
                                class="w-full pl-10 pr-4 py-3 rounded-xl bg-gray-800 border-2 border-gray-700 text-white placeholder-gray-500 focus:border-purple-500 focus:ring-0 transition"
                            >
                        </div>
                    </div>

                    {# Password #}
                    <div class="relative">
                        <label for="password" class="block text-sm font-semibold text-gray-300 mb-1">Mot de passe</label>
                        <div class="relative">
                            <i class="fa fa-lock absolute left-3 top-3 text-gray-400"></i>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                required
                                autocomplete="current-password"
                                placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                                class="w-full pl-10 pr-4 py-3 rounded-xl bg-gray-800 border-2 border-gray-700 text-white placeholder-gray-500 focus:border-purple-500 focus:ring-0 transition"
                            >
                        </div>
                    </div>

                    {# CSRF #}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('admin_authenticate') }}">

                    {# Submit #}
                    <button
                        type="submit"
                        class="w-full py-4 rounded-xl font-bold text-white shadow-lg transition-all hover:shadow-xl hover:-translate-y-0.5 active:translate-y-0"
                        style="background: linear-gradient(135deg,#8b5cf6 0%,#ec4899 100%);">
                        <i class="fa fa-sign-in-alt mr-2"></i> Se connecter
                    </button>

                    {# Info box #}
                    <div class="mt-4 p-3 rounded-2xl bg-purple-500/10 border-2 border-purple-500/20 text-purple-300 text-sm">
                        üîê Connexion s√©curis√©e ‚Äì r√©serv√© aux administrateurs
                    </div>

                </form>

                {# Retour #}
                <div class="mt-6 pt-4 border-t-2 border-gray-800 text-center">
                    <a href="{{ path('app_login') }}" class="text-sm text-gray-400 hover:text-white transition">
                        <i class="fa fa-arrow-left mr-1"></i> Connexion utilisateur
                    </a>
                </div>

            </div>

            {# Info dev #}
            {% if app.debug %}
                <div class="mt-6 p-4 rounded-2xl bg-gray-900/50 backdrop-blur-xl border border-gray-800 text-gray-300 text-sm">
                    <p class="font-semibold mb-2 flex items-center gap-2">
                        <i class="fa fa-tools"></i> Mode d√©veloppement
                    </p>
                    <p>üë§ Admin : <code class="bg-gray-800 px-2 py-0.5 rounded">admin@example.com</code> / <code class="bg-gray-800 px-2 py-0.5 rounded">admin123</code></p>
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}
