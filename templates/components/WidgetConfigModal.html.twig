<div {{ attributes }}>
    <div class="bg-gray-900 border border-gray-800 rounded-2xl p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Configuration</h3>
        
        <form>
            <div class="space-y-4">
                {% for field in this.getFields() %}
                    <div>
                        <label class="block text-sm font-medium text-gray-400 mb-1.5">
                            {{ field.label }}
                        </label>
                        <input
                            type="{{ field.type }}"
                            name="config[{{ field.name }}]"
                            value="{{ config[field.name] ?? '' }}"
                            data-model="config.{{ field.name }}"
                            class="w-full px-4 py-2.5 rounded-lg bg-gray-800 border border-gray-700 text-white 
                                   focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition"
                        >
                    </div>
                {% endfor %}
            </div>
            
            <button type="submit" 
                    class="mt-6 w-full py-2.5 px-4 rounded-lg bg-blue-600 hover:bg-blue-500 text-white font-medium transition">
                Enregistrer
            </button>
        </form>
    </div>
</div>
