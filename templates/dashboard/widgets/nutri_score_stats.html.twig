<div class="space-y-4">
    {# En-tête avec catégorie #}
    <div class="flex items-center justify-between">
        <h4 class="text-sm font-medium text-gray-400">Distribution Nutri-Score</h4>
        <span class="text-xs px-2 py-1 rounded-full bg-gray-800 text-gray-500" data-widget-target="category">
            Chargement...
        </span>
    </div>

    {# Graphique en barres #}
    <div class="space-y-2" data-widget-target="chart">
        {# Grade A #}
        <div class="flex items-center gap-3">
            <div class="flex items-center gap-1.5 w-12">
                <span class="text-xs font-bold px-1.5 py-0.5 rounded bg-green-500 text-white">A</span>
                <span class="text-xs text-gray-500" data-score="a">0</span>
            </div>
            <div class="flex-1 bg-gray-800 rounded-full h-2 overflow-hidden">
                <div class="h-2 bg-green-500 transition-all duration-500" data-bar="a" style="width: 0%"></div>
            </div>
            <span class="text-xs text-gray-400 w-8 text-right" data-percent="a">0%</span>
        </div>

        {# Grade B #}
        <div class="flex items-center gap-3">
            <div class="flex items-center gap-1.5 w-12">
                <span class="text-xs font-bold px-1.5 py-0.5 rounded bg-lime-500 text-white">B</span>
                <span class="text-xs text-gray-500" data-score="b">0</span>
            </div>
            <div class="flex-1 bg-gray-800 rounded-full h-2 overflow-hidden">
                <div class="h-2 bg-lime-500 transition-all duration-500" data-bar="b" style="width: 0%"></div>
            </div>
            <span class="text-xs text-gray-400 w-8 text-right" data-percent="b">0%</span>
        </div>

        {# Grade C #}
        <div class="flex items-center gap-3">
            <div class="flex items-center gap-1.5 w-12">
                <span class="text-xs font-bold px-1.5 py-0.5 rounded bg-yellow-500 text-gray-900">C</span>
                <span class="text-xs text-gray-500" data-score="c">0</span>
            </div>
            <div class="flex-1 bg-gray-800 rounded-full h-2 overflow-hidden">
                <div class="h-2 bg-yellow-500 transition-all duration-500" data-bar="c" style="width: 0%"></div>
            </div>
            <span class="text-xs text-gray-400 w-8 text-right" data-percent="c">0%</span>
        </div>

        {# Grade D #}
        <div class="flex items-center gap-3">
            <div class="flex items-center gap-1.5 w-12">
                <span class="text-xs font-bold px-1.5 py-0.5 rounded bg-orange-500 text-white">D</span>
                <span class="text-xs text-gray-500" data-score="d">0</span>
            </div>
            <div class="flex-1 bg-gray-800 rounded-full h-2 overflow-hidden">
                <div class="h-2 bg-orange-500 transition-all duration-500" data-bar="d" style="width: 0%"></div>
            </div>
            <span class="text-xs text-gray-400 w-8 text-right" data-percent="d">0%</span>
        </div>

        {# Grade E #}
        <div class="flex items-center gap-3">
            <div class="flex items-center gap-1.5 w-12">
                <span class="text-xs font-bold px-1.5 py-0.5 rounded bg-red-500 text-white">E</span>
                <span class="text-xs text-gray-500" data-score="e">0</span>
            </div>
            <div class="flex-1 bg-gray-800 rounded-full h-2 overflow-hidden">
                <div class="h-2 bg-red-500 transition-all duration-500" data-bar="e" style="width: 0%"></div>
            </div>
            <span class="text-xs text-gray-400 w-8 text-right" data-percent="e">0%</span>
        </div>
    </div>

    {# Total produits analysés #}
    <div class="pt-2 border-t border-gray-800 flex items-center justify-between text-xs">
        <span class="text-gray-500">Total analysé</span>
        <span class="font-medium text-white" data-widget-target="total">0 produits</span>
    </div>
</div>
