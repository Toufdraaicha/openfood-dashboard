{% extends 'base.html.twig' %}

{% block title %}V√©rification 2FA{% endblock %}

{% block body %}
<div class="login-container">
    
    <div class="relative w-full max-w-md animate-fade-in">
        
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-24 h-24 rounded-3xl bg-white/10 backdrop-blur-xl border border-white/20 mb-6 shadow-2xl">
                <span class="text-5xl">üîê</span>
            </div>
            <h1 class="text-4xl font-bold text-white mb-3">Code de v√©rification</h1>
            <p class="text-white/80 text-lg">Consultez vos emails</p>
        </div>

        <div class="bg-white rounded-3xl p-8 shadow-2xl">

            {# ‚úÖ Erreur - g√©rer string OU objet #}
            {% if authenticationError %}
                <div class="mb-6 p-4 rounded-2xl bg-red-50 border-2 border-red-200 flex items-start gap-3 animate-fade-in">
                    <span class="text-3xl">‚ùå</span>
                    <div>
                        <p class="font-bold text-red-900 text-base">Erreur</p>
                        <p class="text-red-700 text-sm mt-1">
                            {# Si c'est un objet avec messageKey #}
                            {% if authenticationError.messageKey is defined %}
                                {{ authenticationError.messageKey|trans(authenticationError.messageData, 'security') }}
                            {# Sinon c'est une string #}
                            {% else %}
                                {{ authenticationError }}
                            {% endif %}
                        </p>
                    </div>
                </div>
            {% endif %}

            {# Info email envoy√© #}
            <div class="mb-6 p-4 rounded-2xl bg-blue-50 border-2 border-blue-200 flex items-start gap-3">
                <span class="text-3xl">üìß</span>
                <div class="flex-1">
                    <p class="font-bold text-blue-900 text-sm">Email envoy√© !</p>
                    <p class="text-blue-800 text-xs mt-1">
                        Un code √† 6 chiffres a √©t√© envoy√© √†<br>
                        <strong>{{ app.user.email }}</strong>
                    </p>
                </div>
            </div>

            {# FORMULAIRE DE SAISIE #}
            <form method="post" action="{{ path('2fa_login_check') }}" class="space-y-6" novalidate>

                <div>
                    <label for="_auth_code" class="block text-base font-semibold text-gray-800 mb-3">
                        Entrez le code de v√©rification
                    </label>
                    
                    <input
                        type="text"
                        id="_auth_code"
                        name="_auth_code"
                        required
                        autofocus
                        maxlength="6"
                        minlength="6"
                        autocomplete="one-time-code"
                        inputmode="numeric"
                        pattern="[0-9]{6}"
                        class="w-full px-4 py-4 rounded-xl border-2 border-gray-300 text-3xl text-center tracking-[0.8em] font-mono font-bold focus:border-purple-500 focus:outline-none focus:ring-4 focus:ring-purple-100 transition"
                        placeholder="000000"
                    >
                    
                    <p class="text-xs text-gray-600 mt-2 text-center">
                        üí° Le code est compos√© de 6 chiffres
                    </p>
                </div>

                {# Avertissement expiration #}
                <div class="p-4 rounded-2xl bg-yellow-50 border-2 border-yellow-200">
                    <p class="text-yellow-900 text-sm leading-relaxed">
                        <strong>‚è±Ô∏è Le code expire dans 10 minutes</strong><br>
                        <span class="text-xs text-yellow-800">Apr√®s expiration, vous devrez vous reconnecter</span>
                    </p>
                </div>

                {# CSRF Token pour 2FA #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('two_factor') }}">

                {# Submit #}
                <button type="submit" class="w-full py-4 rounded-xl font-bold text-white shadow-lg transition-all hover:shadow-xl hover:-translate-y-0.5"
                        style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    ‚úÖ V√©rifier le code
                </button>

            </form>

            {# Actions secondaires #}
            <div class="mt-6 pt-6 border-t-2 border-gray-100 space-y-3">
                
                {# Lien Mailpit en dev #}
                {% if app.debug %}
                    <div class="text-center">
                        <a href="http://localhost:8025" target="_blank" 
                           class="inline-flex items-center gap-2 text-sm text-blue-600 hover:text-blue-700 font-medium">
                            üì¨ Ouvrir Mailpit (voir le code)
                        </a>
                    </div>
                {% endif %}
                
                {# Retour login #}
                <div class="text-center">
                    <a href="{{ path('app_login') }}" 
                       class="text-sm text-gray-600 hover:text-gray-800 transition">
                        ‚Üê Retour √† la connexion
                    </a>
                </div>
            </div>
        </div>

        {# Info dev #}
        {% if app.debug %}
            <div class="mt-6 p-4 rounded-2xl bg-white/10 backdrop-blur-xl border border-white/20 text-white">
                <p class="font-semibold mb-2 flex items-center gap-2">
                    <span>üõ†Ô∏è</span>
                    <span>Mode d√©veloppement</span>
                </p>
                <div class="text-sm text-white/80 space-y-1">
                    <p>üìß Les emails 2FA sont dans Mailpit</p>
                    <p>üîó <a href="http://localhost:8025" target="_blank" class="underline">localhost:8025</a></p>
                    <p>‚è±Ô∏è Le code expire apr√®s 10 minutes</p>
                </div>
            </div>
        {% endif %}

    </div>
</div>

{# JavaScript auto-submit #}
<script>
(function() {
    const input = document.getElementById('_auth_code');
    if (!input) return;
    
    // Focus automatique
    input.focus();
    
    // √âcouter la saisie
    input.addEventListener('input', function() {
        // Garder seulement les chiffres
        this.value = this.value.replace(/\D/g, '');
        
        // Auto-submit si 6 chiffres
        if (this.value.length === 6) {
            console.log('‚úÖ 6 chiffres saisis, envoi...');
            setTimeout(() => {
                this.closest('form').submit();
            }, 300);
        }
    });
    
    // Emp√™cher saisie non-chiffres
    input.addEventListener('keypress', function(e) {
        if (!/[0-9]/.test(e.key) && e.key !== 'Enter') {
            e.preventDefault();
        }
    });
    
    console.log('üîê 2FA form ready');
})();
</script>
{% endblock %}
