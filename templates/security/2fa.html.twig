{% extends 'base.html.twig' %}

{% block title %}V√©rification 2FA{% endblock %}

{% block body %}
<div class="login-container">
    
    <div class="relative w-full max-w-md animate-fade-in">
        
        {# Logo & Titre #}
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-3xl bg-white/10 backdrop-blur-xl border border-white/20 mb-4 shadow-2xl">
                <span class="text-4xl">üîê</span>
            </div>
            <h1 class="text-3xl font-bold text-white mb-2">Code de v√©rification</h1>
            <p class="text-white/70">Un code √† 6 chiffres vous a √©t√© envoy√© par email</p>
        </div>

        {# Card formulaire #}
        <div class="bg-white rounded-3xl p-8 shadow-2xl">

            {# Erreur #}
            {% if authenticationError %}
                <div class="mb-6 p-4 rounded-2xl bg-red-50 border-2 border-red-200 flex items-start gap-3">
                    <span class="text-2xl">üòï</span>
                    <div>
                        <p class="font-semibold text-red-900 text-sm">Code incorrect</p>
                        <p class="text-red-700 text-sm mt-1">{{ authenticationError.messageKey|trans(authenticationError.messageData, 'security') }}</p>
                    </div>
                </div>
            {% endif %}

            <form method="post" action="{{ path('2fa_login_check') }}" class="space-y-5" novalidate>

                {# Code 2FA #}
                <div>
                    <label for="_auth_code" class="label">Code de v√©rification</label>
                    <input
                        type="text"
                        id="_auth_code"
                        name="_auth_code"
                        required
                        autofocus
                        maxlength="6"
                        minlength="6"
                        autocomplete="one-time-code"
                        inputmode="numeric"
                        pattern="[0-9]{6}"
                        class="input text-center text-2xl tracking-[0.5em] font-mono"
                        placeholder="000000"
                    >
                    <p class="text-xs text-gray-600 mt-2">üí° Le code expire dans 10 minutes</p>
                </div>

                {# Info box #}
                <div class="p-4 rounded-2xl bg-blue-50 border-2 border-blue-200">
                    <p class="text-blue-900 text-xs leading-relaxed">
                        <strong>üìß V√©rifiez votre bo√Æte mail</strong><br>
                        Le code a √©t√© envoy√© √† <strong>{{ app.user.email }}</strong>
                    </p>
                </div>

                {# CSRF #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('2fa') }}">

                {# Submit #}
                <button
                    type="submit"
                    class="btn btn-primary w-full justify-center">
                    V√©rifier le code ‚Üí
                </button>

            </form>

            {# Retour #}
            <div class="mt-6 pt-4 border-t-2 border-gray-100 text-center">
                <a href="{{ path('app_login') }}" class="text-sm text-gray-600 hover:text-gray-800 transition">
                    ‚Üê Retour √† la connexion
                </a>
            </div>
        </div>

        {# Info dev #}
        {% if app.debug %}
            <div class="mt-6 p-4 rounded-2xl bg-white/10 backdrop-blur-xl border border-white/20 text-white">
                <p class="font-semibold mb-2 flex items-center gap-2">
                    <span>üõ†Ô∏è</span>
                    <span>Mode d√©veloppement</span>
                </p>
                <p class="text-sm text-white/80">
                    üìß Consultez Mailpit : <a href="http://localhost:8025" target="_blank" class="underline hover:text-white">localhost:8025</a>
                </p>
            </div>
        {% endif %}

    </div>
</div>

<script>
// Auto-submit quand 6 chiffres saisis
const input = document.getElementById('_auth_code');
input.addEventListener('input', function() {
    // Garder seulement les chiffres
    this.value = this.value.replace(/\D/g, '');
    
    // Auto-submit si 6 chiffres
    if (this.value.length === 6) {
        this.closest('form').submit();
    }
});

// Focus automatique
input.focus();
</script>
{% endblock %}
