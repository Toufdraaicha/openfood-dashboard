{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center p-6 bg-gray-100">

        <div class="w-full max-w-md">

            {# Logo & Titre #}
            <div class="text-center mb-10">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-white shadow-sm border border-gray-200 mb-4">
                    <i class="fa fa-leaf text-gray-700 text-xl"></i>
                </div>
                <h1 class="text-2xl font-semibold text-gray-900">Connexion</h1>
                <p class="text-sm text-gray-500 mt-2">
                    Accédez à votre espace sécurisé
                </p>
            </div>

            {# Card formulaire #}
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-200">

                {# Erreur #}
                {% if error %}
                    <div class="mb-6 p-4 rounded-xl bg-red-50 border border-red-200 flex items-start gap-3">
                        <i class="fa fa-exclamation-circle text-red-500 mt-0.5"></i>
                        <div>
                            <p class="text-sm font-medium text-red-900">
                                Échec de connexion
                            </p>
                            <p class="text-sm text-red-700 mt-1">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </p>
                        </div>
                    </div>
                {% endif %}

                {# Success message #}
                {% for message in app.flashes('success') %}
                    <div class="mb-6 p-4 rounded-xl bg-green-50 border border-green-200 flex items-center gap-3">
                        <i class="fa fa-check-circle text-green-500"></i>
                        <p class="text-sm text-green-800 font-medium">{{ message }}</p>
                    </div>
                {% endfor %}

                <form method="post" action="{{ path('app_login') }}" class="space-y-5" novalidate>

                    {# Email #}
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            Adresse email
                        </label>
                        <div class="relative">
                            <i class="fa fa-envelope absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-sm"></i>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                value="{{ last_username }}"
                                required
                                autofocus
                                autocomplete="email"
                                class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-300 focus:border-gray-900 focus:ring-0 text-gray-900 placeholder-gray-400 transition"
                                placeholder="vous@exemple.fr"
                            >
                        </div>
                    </div>

                    {# Password #}
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                            Mot de passe
                        </label>
                        <div class="relative">
                            <i class="fa fa-lock absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-sm"></i>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                required
                                autocomplete="current-password"
                                class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-300 focus:border-gray-900 focus:ring-0 text-gray-900 placeholder-gray-400 transition"
                                placeholder="Votre mot de passe"
                            >
                        </div>
                    </div>

                    {# Remember me #}
                    <div class="flex items-center justify-between text-sm">
                        <label class="flex items-center gap-2 text-gray-600 cursor-pointer">
                            <input
                                type="checkbox"
                                id="remember_me"
                                name="_remember_me"
                                class="w-4 h-4 border-gray-300 rounded focus:ring-0"
                            >
                            Se souvenir de moi
                        </label>

                        <a href="#" class="text-gray-500 hover:text-gray-900 transition">
                            Mot de passe oublié ?
                        </a>
                    </div>

                    {# Info 2FA #}
                    <div class="p-4 rounded-xl bg-gray-50 border border-gray-200 flex items-start gap-3">
                        <i class="fa fa-shield-alt text-gray-500 mt-0.5"></i>
                        <p class="text-xs text-gray-600 leading-relaxed">
                            Un code de vérification vous sera envoyé par email après la connexion.
                        </p>
                    </div>

                    {# CSRF #}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# Submit #}
                    <button
                        type="submit"
                        class="w-full py-3 rounded-xl font-medium text-white bg-gray-900 hover:bg-black transition shadow-sm"
                    >
                        Se connecter
                    </button>

                </form>
            </div>

            {# Mode dev #}
            {% if app.debug %}
                <div class="mt-6 p-4 rounded-xl bg-white border border-gray-200 text-gray-700 text-sm">
                    <p class="font-medium mb-2 flex items-center gap-2">
                        <i class="fa fa-tools text-gray-500"></i>
                        Mode développement
                    </p>
                    <div class="space-y-1 text-gray-600 text-xs">
                        <p>
                            Admin :
                            <code class="bg-gray-100 px-2 py-0.5 rounded">admin@example.com</code>
                            /
                            <code class="bg-gray-100 px-2 py-0.5 rounded">admin123</code>
                        </p>
                        <p>
                            User :
                            <code class="bg-gray-100 px-2 py-0.5 rounded">user@example.com</code>
                            /
                            <code class="bg-gray-100 px-2 py-0.5 rounded">user123</code>
                        </p>
                        <p class="mt-2">
                            <a href="http://localhost:8025" target="_blank" class="underline text-gray-500 hover:text-gray-900">
                                Voir les emails (Mailpit)
                            </a>
                        </p>
                    </div>
                </div>
            {% endif %}

            {# Footer #}
            <p class="text-center text-gray-400 text-xs mt-8">
                © {{ "now"|date("Y") }} Open Food Facts
            </p>

        </div>
    </div>
{% endblock %}
